<!DOCTYPE html>
<html>
  <head>
    <title>Bookers3</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/654ad14aa3.js" crossorigin="anonymous"></script>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <%= link_to root_path, class:'navbar-brand'  do %>
            <span>Bookers</span>
          <% end %>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
              <li>
                <%= link_to ' Home', user_path(current_user.id), class: 'nav-link text-light class: fas fa-home' %>
              </li>
              <li>
                <%= link_to ' Users', users_path, class: 'nav-link text-light fas fa-users' %>
              </li>
              <li>
                <%= link_to ' Books', books_path, class: 'nav-link text-light fas fa-book-open' %>
              </li>
              <li>
                <%= link_to ' logout', destroy_user_session_path, method: :delete,class: 'nav-link text-light fas fa-sign-out-alt' %>
              </li>
            <% else %>
              <li>
                <%= link_to " Home", root_path, class:'fas fa-home nav-link text-light' %>
              </li>
              <li>
                <%= link_to " About", home_about_path, class:'fas fa-link nav-link text-light' %>
              </li>
              <li>
                <%= link_to " sign up", new_user_registration_path, class:'fas fa-user-plus nav-link text-light' %>
              </li>
              <li>
                <%= link_to " login", new_user_session_path, class:'fas fa-sign-in-alt nav-link text-light' %>
              </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main>
      <p id="notice"><%= flash[:notice] %></p>
      <%= yield %>
    </main>
    <footer>
      <div class="container mt-5">
      	<div class="row">
        	<div class="mx-auto">
        		<p>CopyRight Infratop.inc</p>
        	</div>
        </div>
      </div>
    </footer>
  </body>
</html>
